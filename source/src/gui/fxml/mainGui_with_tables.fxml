<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="1000.0" prefHeight="600.0"
            prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.fxml_controller.MainGuiController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity"
                                              spacing="10.0">
                                            <children>
                                                <Button fx:id="addPlayerButton" alignment="CENTER"
                                                        mnemonicParsing="false" onAction="#addPlayerButtonClicked"
                                                        text="Add Player" textAlignment="JUSTIFY" wrapText="true"/>
                                                <Button fx:id="playerPresetsButton" mnemonicParsing="false"
                                                        onAction="#playerPresetsButtonClicked" text="Presets"
                                                        textAlignment="CENTER"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                              HBox.hgrow="ALWAYS">
                            <children>
                                <Button fx:id="startButton" defaultButton="true" mnemonicParsing="false"
                                        onAction="#startButtonClicked" text="Start" textAlignment="CENTER">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Button>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                                      VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label text="Iterations"/>
                                        <TextField fx:id="iterationsField" alignment="CENTER"
                                                   onAction="#iterationsFieldChanged"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                                            <children>
                                                <Button fx:id="addEnemyButton" mnemonicParsing="false"
                                                        onAction="#addEnemyButtonClicked" text="Add Enemy"
                                                        textAlignment="JUSTIFY" wrapText="true"/>
                                                <Button fx:id="enemyPresetsButton" mnemonicParsing="false"
                                                        onAction="#enemyPresetsButtonClicked" text="Presets"
                                                        textAlignment="CENTER"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                                      HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Players"/>
                                        <ScrollPane VBox.vgrow="ALWAYS">
                                            <content>
                                                <TableView prefHeight="179.0" prefWidth="467.0">
                                                    <columns>
                                                        <TableColumn editable="false" prefWidth="75.0" text="C1"/>
                                                        <TableColumn editable="false" prefWidth="75.0" text="C2"/>
                                                    </columns>
                                                </TableView>
                                            </content>
                                        </ScrollPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                                      HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Enemies"/>
                                        <ScrollPane VBox.vgrow="ALWAYS">
                                            <content>
                                                <TableView prefHeight="179.0" prefWidth="467.0">
                                                    <columns>
                                                        <TableColumn editable="false" prefWidth="75.0" text="C1"/>
                                                        <TableColumn editable="false" prefWidth="75.0" text="C2"/>
                                                    </columns>
                                                </TableView>
                                            </content>
                                        </ScrollPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                            </children>
                        </HBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                            <children>
                                <Label text="Summary"/>
                                <TextArea fx:id="summaryField"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
